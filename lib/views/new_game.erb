<div>
  <% if @player %>
  <form action="/initialize_game">
    Welcome <%= @player %>!
    <input type="submit" value="Start Game">
  </form>
  <% else %>
   <form action="/new_game">
    What's your name?
    <input type="text" name="name" required>
    <input type="submit" value="submit">
  </form>
  <% end %>
</div>
